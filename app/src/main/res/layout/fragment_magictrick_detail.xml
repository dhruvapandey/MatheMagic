<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/matheMagicLayout"
    android:padding="30dp"
    android:background="#72231F">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/colourImage"
        android:layout_alignEnd="@+id/colourImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textColor="#bdffcc"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="MatheMagic"
        android:autoText="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/colourImage"
        android:layout_centerHorizontal="true"
        android:longClickable="false"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:focusable="false"

        android:focusableInTouchMode="false"
        android:contentDescription="numberImage"
        android:layout_above="@+id/nextButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:id="@+id/previousButton"
        android:layout_below="@+id/colourImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
